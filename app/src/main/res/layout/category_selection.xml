<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ImageView
        android:id="@+id/search_window_id"
        android:layout_width="301dp"
        android:layout_height="45dp"
        android:src="@drawable/search_window"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <ImageView
        android:id="@+id/shopping_basket_id"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/category_shopping_basket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />



    <View
        android:id="@+id/category_component_box_id"
        android:layout_width="413dp"
        android:layout_height="101dp"
        android:layout_marginTop="32dp"
        android:background="#F4F4F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopping_basket_id" />



    <ImageView
        android:id="@+id/category_component_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/category_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <ImageView
        android:id="@+id/category_component2_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/category_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <ImageView
        android:id="@+id/category_component3_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/category_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <ImageView
        android:id="@+id/category_component4_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/category_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.667"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <ImageView
        android:id="@+id/category_component5_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/category_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />


    <!-- Second ScrollView -->

    <ScrollView
        android:id="@+id/first_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Description of your first scroll view"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/second_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_component_box_id"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Add your existing views or other views here -->

            <!-- ImageView 1 -->

            <!-- ImageView 2 -->
            <ImageView
                android:id="@+id/category_selection_list_id"
                android:layout_width="163dp"
                android:layout_height="600dp"
                android:src="@drawable/category_selection_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.63" />

            <ImageView
                android:id="@+id/category_selection_list2_id"
                android:layout_width="163dp"
                android:layout_height="303dp"
                android:src="@drawable/category_selection_list_empty"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.004"
                app:layout_constraintStart_toEndOf="@id/category_selection_list_id"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.995" />

            <!-- Add your existing views or other views here -->

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/second_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/category_component_box_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/first_scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <ImageView
                android:id="@+id/category_ad_id"
                android:layout_width="244dp"
                android:layout_height="142dp"
                android:src="@drawable/category_ad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.279" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <!-- FrameLayout 추가 -->
            <FrameLayout
                android:layout_width="249dp"
                android:layout_height="424dp">


                <ImageView
                    android:id="@+id/category_top_id"
                    android:layout_width="249dp"
                    android:layout_height="424dp"
                    android:src="@drawable/category_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <!-- Second row of buttons and textview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn2_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn3_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginTop="130dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn4_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn5_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn6_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginTop="232dp"
                    android:gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn7_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn8_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn9_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginTop="340dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn10_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn11_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />

                    <Button
                        android:id="@+id/btn12_id"
                        android:layout_width="60dp"
                        android:layout_height="66dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="My Button Description" />


                </LinearLayout>

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="138dp" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
